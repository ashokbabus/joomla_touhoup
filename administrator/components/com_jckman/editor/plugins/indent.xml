<?xml version="1.0"?>
<install version="1.5" type="plugin" plugin="indent" method="upgrade">
	<version>0.1</version>
	<creationDate>Feb 2012</creationDate>
	<author>CKSource.com</author>
	<authorUrl>http://cksource.com/</authorUrl>
	<license>GNU/GPLv2</license>
	<description>Core Indent plugin</description>
	<languages>
	</languages>
	<params group="options">
		<param name="indentOffsetSwitcher" type="jscombo" default="40" label="Indent Offset" description="Size of each indentation step">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="35">35</option>
			<option value="40">40</option>
			<option value="45">45</option>
			<option value="50">50</option>
			<option value="55">55</option>
			<option value="60">60</option>
			<option value="65">65</option>
			<option value="70">70</option>
			<option value="75">75</option>
			<option value="80">80</option>
			<option value="85">85</option>
			<option value="90">90</option>
			<option value="95">95</option>
			<option value="100">100</option>
		</param>
		<param name="indentOffset" type="text" default="40" label="Custom Indent Offset" description="Set a custom size of each indentation step" />
		<param name="indentUnit" type="list" default="px" label="Indent unit" description="Unit type for the indentation">
			<option value="px">Pixels</option>
			<option value="pt">Points</option>
			<option value="%">Percentage</option>
			<option value="em">Em</option>
		</param>
	</params>
</install>